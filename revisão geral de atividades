let listaProdutos = [];

// Função para criar um novo produto
function criarProduto(nome, preco) {
    if (nome && preco) {
        listaProdutos.push({ nomeProduto: nome, precoProduto: preco });
        console.log(`Novo produto "${nome}" adicionado com sucesso por R$ ${preco}`);
